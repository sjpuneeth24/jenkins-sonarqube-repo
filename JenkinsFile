pipeline {
    agent any

    stages {
        stage('Compile') {
            steps {
                echo 'Compile..'
                script {
                    sh '''#!/bin/bash
                    chmod 755 ./gradlew
                    ./gradlew clean build -x test'''
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('SonarQube') {
            steps {
                echo 'SonarQube....'
            }
        }
    }
}
